{% extends 'base.html.twig' %} {% block body %}
<div class="container-fluide" id="pFormule">
  <header>
    {% include 'nav.html.twig' %}
  </header>
  <main class="pt-5 mt-4">
    <section class="mt-5 mb-5">
      <div class="card" style="max-width: 500px;">
        {% for formule in formules %}
        <div class="m-4 card-body">
          <h4 class="card-title text-center m-3">{{ formule.titre }}</h4>
          <h6 class="card-title text-center m-3">{{ formule.description }}</h6>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Séminaire d’entreprise</li class="list-group-item">
            <li class="list-group-item">Manifestations sportives</li class="list-group-item">
            <li class="list-group-item">Manifestations culturelles</li>
            <li class="list-group-item">Salon professionnels</li>
            <li class="list-group-item">Réveillon</li>
            <li class="list-group-item">Mariage</li>
            <li class="list-group-item">Anniversaire</li>
            <li class="list-group-item">Baptême</li>
            <li class="list-group-item">Fêtes de famille</li>
            <li class="list-group-item">Enterrement de vie de célibataire</li>
          </ul class="list-group list-group-flush">
          {# <a
            href="{{ path('cart_add', { id: formule.id }) }}"
            class="btn nav-link btn3"
            >Devenir Premium</a> #}
            <section class="listeSalle m-5">
            <button type="button" class="btn btn2 btnDevis mb-2" data-toggle="modal"
                    data-target="#exampleModalCenter">
                    Devis Gratuit
            </button>
            </section>
        </div>
      </div>

       <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Devis gratuit</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form>
                        <div class="modal-body">

                            <div class="form-group col-10">
                                <div class='input-group date' id='datetimepicker1'>
                                    <label for="example-date-input" class="col-form-label">Date de
                                        l'évenement</label>
                                </div>
                                <div>
                                    <input class="form-control" type="date" id="example-date-input">
                                </div>
                            </div>
                            <div class="form-group col-10">
                                <div>
                                    <label for="example-number-input" class="col-form-label">Nombres de
                                        convives</label>
                                </div>
                                <div>
                                    <input class="form-control" type="number" id="example-number-input">
                                </div>
                            </div>
                            <div class="form-group col-10">
                                <div><label for="exampleTextarea">Détails de mon évènement</label></div>
                                <textarea class="form-control " id="exampleTextarea" rows="3"></textarea>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn2">Envoyer ma demande de devis</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


      {% else %}
      <p>
        no records found
      </p>
      {% endfor %}
    </section>
  </main>
  {% include 'footer.html.twig' %}
</div>

{% endblock %}
